.b-button {
    &.button-dark {
        background: #3e454e
        border-radius: 3px
        color: #fff
        font-size: 14px
        font-weight: 500
        padding: 5px 15px
        text-align: center

        &:hover {
            background: lighten(#3e454e, 8%)
        }
    }

    &.button-light {
        background-color: #fff
        border: solid 1px rgba(196, 196, 196, .9)
        border-radius: 3px
        color: #3e454e
        font-size: 14px
        padding: 5px 15px
        text-align: center

        &:hover {
            background: #f5f5f5
            color: #3e454e
        }
    }
}

