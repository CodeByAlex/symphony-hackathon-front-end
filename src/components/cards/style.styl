.app-container {
    font-family: 'Lato'
    background: #f9f9f9;
    display: flex;
    flex-grow: 1;
    flex-shrink: 0;
    height: 100%;
}

.card {
    border: 1px solid #ebebeb;
    width: 400px;
    margin-right: 30px;
    margin-bottom: 30px;
    border-radius: 3px;
    height: 350px;
    border-radius: 3px;
    background: #fff;
    box-shadow: 0px 0px 6px #0000001a;

    &:last-of-type {
        margin-right: 0
        }
}

.cards-container {
    display: flex;
    flex-wrap: wrap;
}

.card img {
    width: 100%;
    height: 200px;
    /* background-size: cover; */
    object-fit: cover;
}

.card-content {
    padding: 15px;    
}

.card-title {
    text-transform: uppercase;    
}